<div class="container">
	<div class="omb_login">
    	<h3 class="omb_authTitle">Deposit into Account</h3>
		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">	
			    <form class="omb_loginForm" action="/deposit/<%= @account.id %>" autocomplete="off" method="POST">
					
					<span class="help-block"></span>
										
					<div class="input-group">
						<label>Enter Deposit Amount:</label>
						<input  type="number" class="form-control" name="amount">
					</div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="ok">Deposit</button>
                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="cancel">Cancel</button>
				</form>
			</div>
    	</div>
			    	
	</div>
</div>